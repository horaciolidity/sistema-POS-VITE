@tailwind base;
@tailwind components;
@tailwind utilities;

/* Base global */
@layer base {
  html, body { @apply h-full; }
  body { @apply bg-slate-900 text-slate-100 antialiased; }
  h1 { @apply text-2xl font-semibold tracking-tight; }
  h2 { @apply text-xl font-semibold tracking-tight; }
  h3 { @apply text-lg font-medium; }
  a  { @apply text-brand-400 hover:text-brand-300; }
}

/* Componentes */
@layer components {
  .btn {
    @apply inline-flex items-center justify-center rounded-xl2 px-4 py-2 text-sm font-medium
           bg-brand-600 hover:bg-brand-700 active:bg-brand-800 text-white shadow-soft
           transition focus:outline-none focus:ring-2 focus:ring-brand-400/40;
  }
  .btn-ghost { @apply bg-transparent text-slate-200 hover:bg-slate-800/50; }
  .btn-danger { @apply bg-red-600 hover:bg-red-700; }
  .btn-success { @apply bg-green-600 hover:bg-green-700; }

  .input {
    @apply w-full rounded-xl2 border border-slate-700 bg-slate-800/80 px-3 py-2 text-sm
           placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-brand-500;
  }

  .card {
    @apply rounded-2xl bg-slate-900/70 border border-slate-800 shadow-soft p-4;
  }

  .table { @apply w-full text-sm; }
  .table th {
    @apply text-left font-semibold text-slate-300 border-b border-slate-700 pb-2;
  }
  .table td { @apply py-2 border-b border-slate-800; }

  /* Renombradas para evitar ciclo */
  .tw-modal { @apply fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4; }
  .tw-modal-content { @apply w-full max-w-2xl rounded-2xl bg-slate-900 border border-slate-800 p-6; }
}
